// preset form values if we receive a userdata object //
- profile = typeof(data) != 'undefined' ? data : { }

#active_user_container.topfixed
    .signup Welcome
        #user_button
            i.icon-cog
            | #{profile.name} #{profile.surname}

#sysreadout
    .sysreadout.topfixed-left Active Clients:
        #active_clients.number

    .sysreadout.topfixed-left Bytes Sent:
        #bytes_sent.number

    .sysreadout.topfixed-left Bytes Received:
        #bytes_received.number

#mqtt(style="position:absolute; display:none")
    .span4
        #in_mqtt
    .span4
        #in_sys

