block content
    #login-container
        h3 Hello!
        form()#login-form.well.span4
            p.subheading Please Login To Your Account
            label Username
            input(type="text", name="user", id='user-tf').span4.required
            label Password
            input(type="password", name="pass", id='pass-tf').span4.required
            .form-actions
                button(type="button")#btn-login.btn.btn-primary
                    i.icon-lock.icon-white
                    | Sign in
                label#remember-me.checkbox Remember Me
                    input(type="checkbox", checked='checked')
        div.btm-links
            #forgot-password.linklike Forgot Your Password?
            #create-account.linklike Create An Account