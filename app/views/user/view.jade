.container-440-left
    .detail-head
        .content Accounts

    if account.url
        .dl-hwrap
            .dl-head Contact
        dl.dl-horizontal.left-100
            dt Homepage
            dd
                a(href=account.url)= account.url
    .dl-hwrap
        .dl-head Physical Address
    dl.dl-horizontal.left-100
        dt City
        dd= account.location.city

        dt Country
        dd= account.location.country

    .dl-hwrap
        .dl-head Contact Details
    dl.dl-horizontal.left-100
        dt Email
        dd
            a(href='mailto:' + account.email)= account.email

        dt Landline
        dd= account.contact.phone || 'Not known'

        dt Mobile
        dd= account.contact.cell || 'Not known'